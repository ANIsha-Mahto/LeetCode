class Solution {
    public boolean isAnagram(String s, String t) {
        if(s.length()!=t.length()){
            return false;
        }
     //SORTING

        char a[]=s.toCharArray();
        char b[]=t.toCharArray();
        Arrays.sort(a);
        Arrays.sort(b);
        return Arrays.equals(a,b);

    // M-2
        // int count[]=new int [26];
        // for(int i=0;i<s.length();i++){
        //     count[s.charAt(i)-'a']++;
        //     count[t.charAt(i)-'a']--;
        // }
        // for(int c:count){
        //     if(c!=0)
        //       return false;
        // }
        // return true;
    }
}
